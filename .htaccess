Options +FollowSymLinks +ExecCGI

<IfModule mod_rewrite.c>

RewriteEngine On
RewriteCond %{REQUEST_URI}  !(\.pdf|\.css|\.png|\.jpg|\.gif|\.jpeg|\.bmp|\.js|\.ico)$
RewriteRule (.*)  index.html [QSA]

</IfModule>

# 1 year for all your static assets
<filesMatch ".(ico|pdf|flv|jpg|jpeg|png|gif|bmp|css|swf)$">
Header set Cache-Control "max-age=31556926, public"
Header always append X-Frame-Options DENY
</filesMatch>

# 4 hours for dynamic assets
<filesMatch ".(html|htm|php|js)$">
Header set Cache-Control "max-age=14400, must-revalidate"
Header always append X-Frame-Options DENY
</filesMatch>

